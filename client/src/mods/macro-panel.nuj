[def macro-panel #nil]

[defun macro-panel/init! []
  [when-not macro-panel
            [set! macro-panel [widget [ :panel
                                        :width 128
                                        :height 128
                                        :val 8
                                        :x -1
                                        :y -1]]]]
  [inventory/panel/update!]]

[event-bind on-join :blockchooser macro-panel/init!]
