[defun chat/send [msg]
       [message/send -1 [list :chat-message [cat [ansi-blue "System"] ": " msg]]]]

[defun chat/message-handler [sender msg]
       [log [cat [cadr msg] "\n"]]
       [message/send -1 msg]]

[defun chat/init []
       [message/dispatch/add :chat-message chat/message-handler]]

[event-bind on-init :chat-init chat/init]
